{
  "name": "react-schedule-availability",
  "version": "0.1.2",
  "description": "A modern React component for managing weekly availability schedules",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "peerDependencies": {
    "next": ">=12.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/react": "^18.0.15",
    "postcss": "^8.4.14",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^4.7.4"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "react",
    "availability",
    "scheduler",
    "time-picker",
    "calendar",
    "nextjs",
    "schedule-picker",
    "weekly-schedule",
    "business-hours",
    "typescript",
    "react-component"
  ],
  "author": {
    "name": "Waqas",
    "url": "https://github.com/waqas"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/waqas/react-schedule-availability"
  },
  "bugs": {
    "url": "https://github.com/waqas/react-schedule-availability/issues"
  },
  "homepage": "https://github.com/waqas/react-schedule-availability#readme",
  "sideEffects": false
}
